{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'mt-5' } }) }}
    <div class="form-group position-relative mb-3">
        <div class="md-14">
            <label for="password">{{ 'form.password'|trans }}</label>
        </div>
        {{ form_widget(form.plainPassword.first,{'attr': {'class': 'col-md-12 rsv-inp pt-2 pb-2 cl9 md-14'}})  }}

    </div>
    <div class="form-group position-relative mb-3">
        <div class="md-14">
            <label for="password">{{ 'form.password_confirmation'|trans }}</label>
        </div>
        {{ form_widget(form.plainPassword.second,{'attr': {'class': 'col-md-12 rsv-inp pt-2 pb-2 cl9 md-14'}})  }}
    </div>

    <div class="form-group text-right mt-4">
        <input id="btn-clt" name="_submit" type="submit" class="pl-3 pr-3 text-uppercase d-inline-block text-white bcl1 allhtl md-12 " value="{{ 'resetting.reset.submit'|trans }}" />
    </div>
{{ form_end(form) }}

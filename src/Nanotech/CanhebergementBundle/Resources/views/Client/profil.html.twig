                        <div class="mb-3 col-md-12 mt-4">
                            <div class="row">
                                <a href="{{ path('nanotech_canhebergement_client_index') }}" class="col-md-12 critaire no-dec cl9 hcl3"><i class="material-icons cl8 md-18" style="transform:rotate(-90deg)">note</i> Reservation <span class="badge badge-warning">14</span> </a>
                            </div>
                        </div>
                        <div class="mb-3 col-md-12">
                            <div class="row">
                                <a href="{{ path('nanotech_canhebergement_client_confirme') }}" class="col-md-12 critaire no-dec cl9 hcl3"><i class="material-icons cl8 md-18">description</i> Reservation Confirmée <span class="badge badge-primary">02</span> </a>
                            </div>
                        </div>
                        <div class=" col-md-12 ">
                            <div class="row">
                                <div class="col-md-12 mrb10 critaire point cl9 hcl3"><i class="material-icons cl8 md-18">person</i> Profil </div>
                                <div class="col-md-12 crtCnt cl9">
                                    <div class="col-md-12 mb-2 mt-2">
                                        <a href="{{ path('nanotech_canhebergement_client_profil') }}" class="pl-2 critaire hcl3 no-dec cl9"><i class="material-icons cl8 md-18">info</i> Information</a>
                                    </div>
                                    <div class="form-group col-md-12 mb-0 point tris">
                                        <div class="pl-2  mrb10 critaire point"> <i class="material-icons cl8 md-18">create</i> Modification</div>
                                        <div class="col-md-12 crtCnt cl9">

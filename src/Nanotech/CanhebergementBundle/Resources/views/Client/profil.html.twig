                                                <a href="{{ path('nanotech_canhebergement_client_modifier_info') }}" class="pl-2 critaire hcl3 cl9 no-dec" ><i class="material-icons cl8 md-18">menu</i> Information</a>
                                            </div>
                                            <div class="col-md-12 mb-0 pb-2 pt-2">
                                                <a href="{{ path('nanotech_canhebergement_client_modifier_password') }}" class="pl-2 critaire hcl3 cl9 no-dec" ><i class="material-icons cl8 md-18">lock</i> Mot de passe</a>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-9 mb-5">
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <h5 class="h1-r font-weight-bold cl9 text-uppercase">Informations personnelles</h5>
                        </div>
                        <div class="col-md-12 mb-3">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="col-md-12 mt-2 mb-3">
                                        <div class="p-3 bcl7">
                                            <h5 class="mb-4 text-uppercase md-16 cl3 ">Résidence</h5>
                                            <div class="position-relative mb-4">
                                                <div class="position-relative md-14 cl8">Pays de résidence</div>
                                                <h6 class="text-uppercase md-14">{{ internaute.pays }}</h6>
                                            </div>
                                            <div class=" position-relative ">
                                                <div class="position-relative md-14 cl8">Adrésse de résidence</div>
                                                <h6 class="text-uppercase md-14">{{ internaute.adresse }}</h6>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12 mt-2 mb-3">
                                        <div class="p-3 bcl7">
                                            <h5 class="mb-4 text-uppercase md-16 cl3 ">Justificatif</h5>
                                            <div class="position-relative mb-4">
                                                <div class="position-relative md-14 cl8">Type de document</div>
                                                <h6 class="text-uppercase md-14">{{ internaute.typedocument }}</h6>
                                            </div>
                                            <div class=" position-relative mb-4">
                                                <div class="position-relative md-14 cl8">Numéro du document</div>
                                                <h6 class="text-uppercasemd-14">{{ internaute.numdocument }}</h6>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 mt-2 mb-3">
                                    <div class="p-3 bcl7">
                                        <h5 class="mb-4 text-uppercase md-16 cl3 ">Détail du client</h5>
                                        <div class="position-relative mb-4">
                                            <div class="position-relative md-14 cl8">Nom et prénom</div>
                                            <h6 class="text-uppercase md-14">{{ internaute.prenom }} {{ internaute.nom }}</h6>
                                        </div>
                                        <div class="position-relative mb-4">
                                            <div class="position-relative md-14 cl8">Nom d'utilisateur</div>
                                            <h6 class="text-uppercase md-14">{{ username }}</h6>
                                        </div>
                                        <div class="position-relative mb-4">
                                            <div class="position-relative md-14 cl8">Date de naissance</div>
                                            <h6 class="text-uppercase md-14">{{ internaute.dateNai | date }}</h6>
                                        </div>
                                        <div class="position-relative mb-4">
                                            <div class="position-relative md-14 cl8">Lieu de naissance</div>
                                            <h6 class="text-uppercase md-14">{{ internaute.lieuNai }}</h6>
                                        </div>
                                        <div class=" position-relative mb-4">
                                            <div class="position-relative md-14 cl8">Numéro de téléphone</div>
                                            <h6 class="text-uppercase md-14">{{ internaute.telephone }}</h6>
                                        </div>
                                        <div class=" position-relative mb-4">
                                            <div class="position-relative md-14 cl8">Adrésse email</div>
                                            <h6 class="md-14">{{ internaute.email }}</h6>
                                        </div>
                                        <div class=" position-relative mb-4">
                                            <div class="position-relative md-14 cl8">Nationalité</div>
                                            <h6 class="text-uppercase md-14">{{ internaute.nationalite }}</h6>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="divider"></div>
        </div>
        <div id="toT" class="toTop text-center" title="remonter"><i class="material-icons">keyboard_arrow_up</i></div>
        <!-- modal-reservation -->
        <div class="modal fade" id="modal-dtl" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog  modal-dialog-centered pl-3">
                <div class="p-3 position-relative modal-content" style="background-color: #fff; max-width:600px; margin: auto;">
                    <div class="cls-clt point" data-dismiss="modal"><i class="material-icons">close</i></div>
                    <div class="md-16 mb-4 mt-4 cl8 text-uppercase">Reservation <strong> N°21457 </strong></div>

                    <div class="cl8">
                        Equipement de la chambre:
                        <ul class="cl9 mt-2  pl-3">
                            <li>3 Pièce</li>
                            <li>2 lits</li>
                            <li>2 sale de bain</li>
                            <li>Télévision</li>
                            <li>Climatisée</li>
                        </ul>
                    </div>

                </div>
            </div>
        </div>
        <div class="modal fade" id="modal-pwd" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog  modal-dialog-centered pl-3">
                <div class="p-3 position-relative modal-content" style="background-color: #fff; max-width:600px; margin: auto;">
                    <div class="cls-clt point" data-dismiss="modal"><i class="material-icons">close</i></div>
                    <div class="md-16 mb-4 mt-4 cl8 text-uppercase">Modification du <strong> Mot de passe </strong> </div>
                    <form>
                        <div class="form-group position-relative mb-3">
                            <div class="md-14"><label for="rsv-nbr">Ancien mot de passe</label></div>
                            <input class="col-md-12 rsv-inp pt-2 pb-2 cl9 md-14 " type="text" name="" id="" placeholder="Entrer l'ancien mot de passe ">
                        </div>
                        <div class="form-group position-relative mb-3">
                            <div class="md-14"><label for="rsv-nbr">Nouveau mot de passe</label></div>
                            <input class="col-md-12 rsv-inp pt-2 pb-2 cl9 md-14 " type="text" name="" id="" placeholder="Entrer le nouveau mot de passe">
                        </div>
                        <div class="form-group text-right mt-4">
                            <a href="#" id="btn-clt" data-dismiss="modal" class="pl-3 pr-3 text-uppercase d-inline-block text-white bcl1 allhtl md-12 ">Modifier</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="modal fade" id="modal-doc" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog  modal-dialog-centered pl-3">
                <div class="p-3 position-relative modal-content" style="background-color: #fff; max-width:600px; margin: auto;">
                    <div class="cls-clt point" data-dismiss="modal"><i class="material-icons">close</i></div>
                    <div class="md-16 mb-4 mt-4 cl8 text-uppercase">Modification du <strong> Document justificatif</strong> </div>
                    <form>
                        <div class="form-group position-relative mb-3">
                            <div class="position-relative md-14"><label for="rsv-nom">Type de document</label></div>
                            <input class="col-md-12 rsv-inp pt-2 pb-2 cl9 md-14 " type="text" name="" id="" placeholder="Type de piece ex:cni,passport...">
                        </div>
                        <div class="form-group position-relative mb-3">
                            <div class="position-relative md-14"><label for="rsv-prn">Numéro du document</label></div>
                            <input class="col-md-12 rsv-inp pt-2 pb-2 cl9 md-14 " type="text" name="" id="" placeholder="Indiquez le numéro du document">
                        </div>
                        <div class="form-group position-relative mb-3">
                            <div class="position-relative md-14"><label for="rsv-nbr">Fichier joint</label></div>
                            <input type="file" name="logo" id="logo" class="inputfile">
                            <label for="logo" class="point fchr cl8 font-weight-bold"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="17" viewBox="0 0 20 17"><path d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z"></path></svg>
                                <span class="dpb2">Choisir un fichier…</span></label>
                            <div class="rsv-error md-12 cl3 ">I-erreur</div>
                        </div>
                        <div class="form-group text-right mt-4">
                            <a href="#" id="btn-clt" data-dismiss="modal" class="pl-3 pr-3 text-uppercase d-inline-block text-white bcl1 allhtl md-12 ">Modifier</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="modal fade" id="modal-rsd" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog  modal-dialog-centered pl-3">
                <div class="p-3 position-relative modal-content" style="background-color: #fff; max-width:600px; margin: auto;">
                    <div class="cls-clt point" data-dismiss="modal"><i class="material-icons">close</i></div>
                    <div class="md-16 mb-4 mt-4 cl8 text-uppercase">Modification de la <strong> Résidence </strong> </div>
                    <form>
                        <div class="form-group position-relative mb-3">
                            <div class="md-14"><label for="rsv-nbr">Pays de résidence</label></div>
                            <input class="col-md-12 rsv-inp pt-2 pb-2 cl9 md-14 " type="text" name="" id="" placeholder="Entrer votre pays de résidence ">
                        </div>
                        <div class="form-group position-relative mb-3">
                            <div class="md-14"><label for="rsv-nbr">Adrésse</label></div>
                            <input class="col-md-12 rsv-inp pt-2 pb-2 cl9 md-14 " type="text" name="" id="" placeholder="Indiquer votre adrésse">
                        </div>
                        <div class="form-group text-right mt-4">
                            <a href="#" id="btn-clt" data-dismiss="modal" class="pl-3 pr-3 text-uppercase d-inline-block text-white bcl1 allhtl md-12 ">Modifier</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="modal fade" id="modal-dtlPro" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog  modal-dialog-centered pl-3">
                <div class="p-3 position-relative modal-content" style="background-color: #fff; max-width:600px; margin: auto;">
                    <div class="cls-clt point" data-dismiss="modal"><i class="material-icons">close</i></div>
                    <div class="md-16 mb-4 mt-4 cl8 text-uppercase">Modification du <strong> Détail client </strong> </div>
                    <form>

                        <div class="form-group position-relative mb-3">
                            <div class="md-14"><label for="rsv-nbr">Nom</label></div>
                            <input class="col-md-12 rsv-inp pt-2 pb-2 cl9 md-14 " type="text" name="" id="" placeholder="Votre nom">
                        </div>
                        <div class="form-group position-relative mb-3">
                            <div class="md-14"><label for="rsv-nbr">prénom</label></div>
                            <input class="col-md-12 rsv-inp pt-2 pb-2 cl9 md-14 " type="text" name="" id="" placeholder="Votre prénom">
                        </div>
                        <div class="form-group position-relative mb-3">
                            <div class="md-14"><label for="rsv-nbr">Numéro de téléphone</label></div>
                            <input class="col-md-12 rsv-inp pt-2 pb-2 cl9 md-14 " type="text" name="" id="" placeholder="Votre numéro de téléphone">
                        </div>
                        <div class="form-group position-relative mb-3">
                            <div class="md-14"><label for="rsv-nbr">Email</label></div>
                            <input class="col-md-12 rsv-inp pt-2 pb-2 cl9 md-14 " type="text" name="" id="" placeholder="Votre adrésse email">
                        </div>
                        <div class="form-group position-relative mb-3">
                            <div class="md-14"><label for="rsv-nbr">Nationalité</label></div>
                            <input class="col-md-12 rsv-inp pt-2 pb-2 cl9 md-14 " type="text" name="" id="" placeholder="Votre nationalité">
                        </div>
                        <div class="form-group text-right mt-4">
                            <a href="#" id="btn-clt" data-dismiss="modal" class="pl-3 pr-3 text-uppercase d-inline-block text-white bcl1 allhtl md-12 ">Modifier</a>
                        </div>
                    </form>
                </div>

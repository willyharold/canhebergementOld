                    <div class="row mb-5">
                        <div class="col-md-12 colortitle">
                            <h4 class="h1-r font-weight-bold cl8" id="nom">A propos de {{ partenaire.nom | upper }}</h4>
                        </div>
                        <div class="col-md-12 mt-3 cl8">
                            {{ partenaire.descriptionFr | raw}}
                        </div>
                        <div class="col-md-12 mb-5">
                            <div id="loc" class="mt-2 mb-2">
                            </div>
                            <div><span class="font-weight-bold cl12">TELEHONE:</span> {{ partenaire.numTel1 }}, {{ partenaire.numTel2 }}, {{ partenaire.numTel3 }}</div>
                            <div class="mt-2"><span class="font-weight-bold cl12">EMAIL:</span> {{ partenaire.adrEmail }}</div>
                            <div class="mt-2"><span class="font-weight-bold cl12 ">ADRESSE:</span> {{partenaire.quartier}}, {{partenaire.ville}}, {{partenaire.pays}}</div>
                        </div>

                    </div>
                    <div class="row mb-5">
                        <div class="col-md-12 colortitle">
                            <h4 class="h1-r font-weight-bold cl8" id="nom">Service</h4>
                        </div>
                        <div class="col-md-6 mt-3 mb-3 ">
                            <div>

